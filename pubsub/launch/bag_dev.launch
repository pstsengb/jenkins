<?xml version="1.0"?>
<launch>


  <arg name="bag_file" default="$(find pubsub)/launch/v_laser_scan.bag"/>

  <param name="/use_sim_time" value="true"/>
  
  <node pkg="rosbag" type="play" name="playback" args="--clock -l $(arg bag_file)"/>

  <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_laser" args="0.31 0.31 0 0.785398163 0 0 base_link laser" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_pad" args="0.3 0 0.0 0 0 0 base_link charging_pad" />

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find pubsub)/launch/rviz.config.rviz" output="screen"/>


</launch> 
